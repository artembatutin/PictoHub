@model IEnumerable<PictoHub.Models.Board>

@{
    ViewBag.Title = "Boards";
}

@foreach (var item in Model) {

    <div class="board-link">
        <a href="/Threads/Index/@Html.DisplayFor(modelItem => item.Id)">
            <div class="jumbotron-@Html.DisplayFor(modelItem => item.Color) jumbotron">
                <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
                <p class="lead">@Html.DisplayFor(modelItem => item.Desc)</p>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </div>
        </a>
    </div>
}


@if (Request.IsAuthenticated) {
    <p> @Html.ActionLink("Create New Board", "Create", "Boards")</p>
}
